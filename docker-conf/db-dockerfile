FROM mysql:latest
ENV MYSQL_ROOT_PASSWORD=asdf
RUN mysql -u root -p asdf -e "CREATE DATABASE IF NOT EXISTS wpdb; GRANT ALL ON wpdb.* TO 'wpuser'@'localhost' IDENTIFIED BY 'asdf'; FLUSH PRIVILEGES "
EXPOSE 3306
RUN echo "mysql -u root -p asdf -e "CREATE DATABASE IF NOT EXISTS wpdb; GRANT ALL ON wpdb.* TO 'wpuser'@'localhost' IDENTIFIED BY 'asdf'; FLUSH PRIVILEGES "" > /create-db.sh && chmod 700 /create-db.sh
ENTRYPOINT /create-db.sh
